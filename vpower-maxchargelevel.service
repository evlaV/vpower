[Unit]
Description=vpower daemon helper
ConditionPathExistsGlob=/usr/bin/steamosctl
After=dbus.service steamos-manager.service
Before=vpower.service

[Service]
User=deck
Group=deck
RuntimeDirectory=vpower/helper
RuntimeDirectoryPreserve=yes
ExecStart=/bin/bash -c "while :; do /usr/bin/steamosctl get-max-charge-level | sed 's/^.*: //' > /run/vpower/helper/bat_maxchargelevel; sleep 1s; done"
Restart=on-failure
RestartSec=1

[Install]
WantedBy=graphical.target
WantedBy=vpower.service

